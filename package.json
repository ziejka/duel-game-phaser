{
    "name": "duel",
    "version": "0.0.1",
    "description": "DUel game",
    "scripts": {
        "clean": "rimraf dist",
        "build:dev": "cd ./src/client && webpack --env dev",
        "build:prod": "cd ./src/client && webpack --env prod",
        "start": "cd ./src/client && webpack-dev-server -d --env dev",
        "serve": "node build/server.js",
        "dev-client": "cd ./src/client && webpack --env dev --watch",
        "dev-server": ".\\node_modules\\.bin\\tsc-watch -p ./src/server --onSuccess \"node ./dist/server/server.js\"",
        "dev": "npm run clean && concurrently --prefix \"[{name}]\" --names \"SERVER,CLIENT\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev-server\" \"npm run start\""
    },
    "author": "Ziejka",
    "devDependencies": {
        "@types/node": "^10.12.2",
        "@types/webpack": "^4.4.17",
        "@types/ws": "^6.0.1",
        "raw-loader": "^0.5.1",
        "ts-loader": "^5.3.0",
        "ts-node": "^7.0.1",
        "tsc-watch": "^1.0.30",
        "typescript": "^3.1.6",
        "webpack": "^4.24.0",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10"
    },
    "dependencies": {
        "@types/express": "^4.16.0",
        "@types/socket.io": "^2.1.0",
        "copy-webpack-plugin": "^4.6.0",
        "express": "^4.16.4",
        "html-webpack-plugin": "^3.2.0",
        "phaser": "^3.15.1",
        "socket.io": "^2.1.1"
    }
}
